                    <GradientStop Color="#FFBFBCBC" Offset="0" />
                    <GradientStop Color="Khaki" Offset="0.5" />
                    <GradientStop Color="#FFE6E6E6" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
